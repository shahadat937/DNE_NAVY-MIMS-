@model RMS.Web.Models.ViewModel.UserViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
{
<div class="panel panel-primary">
    <div class="card-header">
        <div>
            <h3 class="card-title"> Change Password</h3>

        </div>
        <div class="card-options">
        </div>
    </div>
    <div class="panel-body">
        <p>Password Hints</p>
        <ul>
            <li>1. Must be one or more capital letter(A,B,C...)</li>
            <li>2. Must be one or more numerical number(0,1,2,3....)</li>
            <li>3. Must be one or more Special Charecter(#,%,^,&..)</li>

        </ul>
        <span style="font-style:italic">Ex. Infinity@123</span>
        <br />
        <br />
        <div class="row">
            <div class="col-sm-6 col-lg-6">
                <div class="form-group">
                    <label class="col-md-4 control-label">Old Password:</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control", tabindex = 1, autofocus = "autofocus", placeholder = "Enter Password" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-6">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-lg-6">
                <div class="form-group">
                    <label class="col-md-4 control-label">New Password:</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.User.Password, new { @class = "form-control", tabindex = 2, placeholder = "Enter Password" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-6">
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-lg-6">
                <div class="form-group">
                    <label class="col-md-4 control-label">Confirm Password:</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.User.ConfirmPassword, new { @class = "form-control", tabindex = 3, placeholder = "Enter ConfirmPassword" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-6">
                <div class="form-group">
                    <div class="col-sm-12">
                        @Html.ValidationMessageFor(x => x.User.ConfirmPassword)
                    </div>
                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-sm-6 col-lg-6">
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-8" style="text-align:right">
                        <input type="submit" id="btnSave" value="Change Password" class="btn btn-info" tabindex=4 />
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-6">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-lg-6">
                @if (Model.Message != null)
                {
                    if (Model.IsSucceed == 1)
                    {
                        <div style="color:green">@Model.Message</div>
                    }
                    else
                    {
                        <div style="color:red">@Model.Message</div>
                    }
                }
            </div>
            <div class="col-sm-6 col-lg-6">
            </div>
        </div>
    </div>
</div>

}



