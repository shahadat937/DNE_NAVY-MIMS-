@using RMS.Utility
@using RMS.Web.Extensions
@model RMS.Web.Models.ViewModel.MachineryInfoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="card card-profile  overflow-hidden">
            <div class="card-body text-center profile-bg">
                <div class=" card-profile">
                    <h3 class="mt-3 text-white mb-0">@Model.MachineryInfo.Machinery of @Model.MachineryInfo.ControlShipInfo.ControlName</h3>


                    <a href="@Url.Action("Edit", "MachineryInfo", new {id= Model.MachineryInfo.MachineryInfoIdentity })" class="btn btn-danger btn-sm"><i class="fa fa-pencil-alt" aria-hidden="true"></i> Edit</a>
                </div>
            </div>
            <div class="card">
                <div class="card-body pb-0" style="max-height:100% !important">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade active show" id="tabs-icons-text-1" role="tabpanel" aria-labelledby="tabs-icons-text-1-tab">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered text-nowrap w-100">
                                    <tbody>
                                        <tr>
                                            <td><strong>Full Name </strong></td>
                                            <td>@Model.MachineryInfo.Machinery</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Model </strong></td>
                                            <td>@Model.MachineryInfo.Model</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Power </strong></td>
                                            <td>@Model.MachineryInfo.Power @Model.MachineryInfo.PowerUnit</td>
                                        </tr>
                                        @*<tr>
                                            <td><strong>Pressure </strong> </td>
                                            <td>@Model.MachineryInfo.Pressure</td>
                                        </tr>*@
                                        <tr>
                                            <td><strong>Maker Address :</strong></td>
                                            <td> @Model.MachineryInfo.MakerAddress</td>
                                        </tr>
                                        <tr>
                                            <td><strong>MOH :</strong></td>
                                            <td> @Model.MachineryInfo.MOH</td>
                                        </tr>
                                        <tr>
                                            <td><strong>TOH :</strong> </td>
                                            <td> @Model.MachineryInfo.TOH</td>
                                        </tr>
                                        <tr>
                                            <td><strong>RPM :</strong></td>
                                            <td> @Model.MachineryInfo.RPM</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Row -->
