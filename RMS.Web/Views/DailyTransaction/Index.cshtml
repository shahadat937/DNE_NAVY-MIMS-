@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.amountCalcuation').on('keyup', function () {
                var fcAmount = $('#fcAmount').val();
                fcAmount = fcAmount == '' ? 0 : fcAmount;
                var exchangeRate = $('#exchangeRate').val();
                exchangeRate = exchangeRate == '' ? 0 : exchangeRate;
                var bdtAmount = (parseFloat(fcAmount) * parseFloat(exchangeRate)).toFixed(2);
                $('#bdtAmount').text(parseFloat(bdtAmount));
            });
        });
    </script>
}
