@using System.Activities.Statements
@using DocumentFormat.OpenXml.Office.CustomUI
@using RMS.Utility
@using RMS.Web.Extensions
@model RMS.Web.Models.ViewModel.MessageInfoViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .modal p {
        word-wrap: break-word;
    }
</style>
<!-- Row -->
<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div>
                    <h3 class="card-title">Message Information</h3>
                </div>
                <div class="card-options">
                    @Html.ActionLink("Add New", "Edit", "MessageInfo", new { @class = "btn btn-primary", style = "color:#fff;" })

                </div>
            </div>
            <div class="card-body" style="max-height:100% !important">
                <div class="table-responsive">
                    <table id="example3" class="table table-striped table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th class="wd-15p">View</th>
                                <th class="wd-15p">Message For</th>
                                <th class="wd-20p">Message From Date</th>
                                <th class="wd-20p">Message To Date</th>
                                <th class="wd-20p">Message</th>
                                <th class="wd-20p"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MessageInfos)
                            {
                                <tr>
                                    <td>
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                    </td>
                                    <td>@item.Role.RoleName</td>
                                    <td>@string.Format("{0:dd MMM yyyy}", item.MessageFromDate)</td>
                                    <td>@string.Format("{0:dd MMM yyyy}", item.MessageToDate)</td>
                                    <td>@item.Message</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", "MessageInfo", new { id = item.MessageInfoIdentity }, null)

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row End-->


    