@using RMS.Utility
@model RMS.Web.Models.ViewModel.QuaterlyReturnViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Row -->
<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div>
                    <h3 class="card-title">Quaterly Return</h3>
                </div>
                <div class="card-options">
                    @Html.ActionLink("Add New", "QuaterlyReturnEdit", "DamageMachineriesInfo", new { viewCount = 0 }, new { @class = "btn btn-primary", style = "color:#fff;" })

                </div>
            </div>
            <div class="card-body" style="max-height:100% !important">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th class="wd-15p">Ship Name</th>
                                <th class="wd-15p">Report Month</th>
                                <th class="wd-20p">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.quaterlyReturns)
                            {
                                <tr>
                                    <td><a href="@Url.Action("QuaterlyReturnView", "DamageMachineriesInfo", new {id= item.QuaterlyReturnId })">@item.ControlShipInfo.ControlName</a> </td>
                                    @if (item.CommonCode != null)
                                    {
                                        <td>@item.CommonCode.TypeValue</td>
                                    }
                                    <td>@item.ReturnReportNo.ReturnSerialNo  /  @item.ReturnReportYear.Name</td>
                                    <td>
                                        @Html.ActionLink("SHIP'S EMPLOYEMENT", "QuaterlyReturnEdit", "DamageMachineriesInfo", new { id = item.QuaterlyReturnId, viewCount = 1 }, new { @class = "btn btn-outline-primary btn-sm" }) |
                                        @Html.ActionLink("CONSUMPTION DATA", "QuaterlyReturnEdit", "DamageMachineriesInfo", new { id = item.QuaterlyReturnId, viewCount = 2 }, new { @class = "btn btn-outline-secondary btn-sm" }) |
                                        @Html.ActionLink("MAIN ENGINES & GENERATORS", "QuaterlyReturnEdit", "DamageMachineriesInfo", new { id = item.QuaterlyReturnId, viewCount = 3 }, new { @class = "btn btn-outline-info btn-sm" }) |
                                        @Html.ActionLink("MACHINERY UNDER TRAIL", "QuaterlyReturnEdit", "DamageMachineriesInfo", new { id = item.QuaterlyReturnId, viewCount = 4 }, new { @class = "btn btn-outline-dark btn-sm" }) |
                                        @Html.ActionLink("REMARKS", "QuaterlyReturnEdit", "DamageMachineriesInfo", new { id = item.QuaterlyReturnId, viewCount = 5 }, new { @class = "btn btn-outline-success btn-sm" }) |
                                        @Html.ActionLink("Download", "Download", "DamageMachineriesInfo", new { id = item.ShipId }, null)
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row End-->

