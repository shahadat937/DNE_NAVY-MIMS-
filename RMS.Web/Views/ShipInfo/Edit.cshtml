                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Propeller Qty:</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.PropellerQty, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Rudder Qty:</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.RudderQty, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Speed Max:</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.SpeedMax, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
