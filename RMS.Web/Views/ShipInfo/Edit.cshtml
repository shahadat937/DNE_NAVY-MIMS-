                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Tank Capacity FW:</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.TankCapacityFW, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Tank Capacity Fuel:</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.TankCapacityFuel, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Tank Capacity Luboil:</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.TankCapacityLuboil, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
