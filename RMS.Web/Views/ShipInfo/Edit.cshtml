                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">SQD:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.ShipInfo.SQD, Model.SqdSelectListItems, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Call Sign:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.ShipId, new { @class = "textBoxsize form-control  callsign", onkeyup = "checkvalue()", tabindex = 5, placeholder = "Enter Value", required = "required" })
                                </div>
                              
                            </div>
                            <div id="divStatus"  align="center"></div>
                        </div>
                        
                    </div>*@
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Ship Name:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.ShipInfo.ControlShipInfoId, Model.ControlShipSelectListItems, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Remarks:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.Remarks, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-12 control-label">Ship's Parameters</label>
                                </div>
                            </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Length(m):</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.Length, new { @class = "textBoxsize form-control len", tabindex = 5, onkeypress = " return isNumberKey(event)", placeholder = "Enter Only Neumeric Value" })
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Breadth(m):</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.Breadth, new { @class = "textBoxsize form-control", tabindex = 5, onkeypress = " return isNumberKey(event)", placeholder = "Enter Only Neumeric Value" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Draught AFT(m):</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.ShipInfo.DraughtAFT, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Only Neumeric Value" })
