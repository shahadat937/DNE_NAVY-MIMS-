@using RMS.Utility
@using RMS.Web.Extensions
@model RMS.Web.Models.ViewModel.RefitDockingScheduleViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row -->
<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div>
                    <h3 class="card-title">Dockyard List</h3>
                </div>
                <div class="card-options">
                    @Html.ActionLink("Add New", "RefitDockingScheduleExcelEdit", "RefitDockingSchedule", new { @class = "btn btn-primary", style = "color:#fff;" })

                </div>
            </div>
            <div class="card-body" style="max-height:100% !important">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th class="wd-15p">Dock Name</th>
                                @*<th class="wd-15p">Report Year</th>*@
                                @*<th class="wd-20p">Deck No</th>*@
                                @*<th class="wd-20p">Frmae No</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DockedSelectList)
                            {
                                <tr>
                                    <td><a href="@Url.Action("ScheduleReportWithYear", "RefitDockingSchedule", new {dockName = item.Text, DockId=item.Value })">@item.Text</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row End-->