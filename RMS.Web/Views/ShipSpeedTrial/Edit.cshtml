@using DocumentFormat.OpenXml.Office2010.Excel
@using RMS.Web.Extensions
@model RMS.Web.Models.ViewModel.ShipSpeedTrialViewModel
@{
    ViewBag.Title = (Model.ShipSpeedTrial.ShipSpeedTrialIdentity > 0) ? "Edit" : "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @using (Html.BeginForm("Save", "ShipSpeedTrial", FormMethod.Post, new { @class = "UserForm" }))
    {
        <div class="container">
            <div class="aaa">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">
                        Ship Speed Trial
                    </legend>
                    <br />
                    @if (ViewBag.Title == "Edit")
                    {
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Serial Number:</label>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(x => x.ShipSpeedTrial.ShipSpeedTrialIdentity, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9, required = "required" })
                                        @Html.HiddenFor(x => x.ShipSpeedTrial.ShipSpeedTrialIdentity)
                                    </div>
                                </div>
                            </div>

                        </div>
                    }

                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Ship Name:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.ShipSpeedTrial.ShipId, Model.ShipSpeedSelectListItems, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9, required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Description:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipSpeedTrial.Description, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value", required = "required" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Port M/E (RPM):</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipSpeedTrial.PortSpeed, new { @class = "textBoxsize form-control li", tabindex = 5, onkeypress = " return isNumberKey(event)", placeholder = "Enter Neumeric Value", required = "required" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Stbd M/E (RPM):</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipSpeedTrial.StbdSpeed, new { @class = "textBoxsize form-control ", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Neumeric Value", required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Stable Speed (KNT):</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipSpeedTrial.StableSpeed, new { @class = "textBoxsize form-control", onkeypress = " return isNumberKey(event)", tabindex = 5, placeholder = "Enter Neumeric Value", required = "required" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Remarks:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipSpeedTrial.Remarks, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="form_group">
                <div style="float: right">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div>@Html.ActionLink("Back to List", "Index", "FuelConsumption", new { @class = "btn btn-primary" })</div>
            <div class="row">
                <div class="col-sm-offset-4" id="newpost" style="color:red; padding-left:3px;">
                    <p>@TempData["message"]</p>
                </div>
            </div>
        </div>
    }
</div>
<script type="text/javascript">

   
       //$("#txtQty").keyup(function () {
       //    var $this = $(this);
       //    $this.val($this.val().replace(/[^\d.]/g, ''));
       //});
       //$('#output').val(value);

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
      
        if (charCode != 46 && charCode > 31
    && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
</script>


