@using RMS.Web.Extensions
@model RMS.Web.Models.ViewModel.MessageInfoViewModel
@{
    ViewBag.Title = (Model.MessageInfo.MessageInfoIdentity > 0) ? "Edit" : "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8">
    <title></title>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
</head>
    <link href="~/CommonDesign/commonBootStrap.css" rel="stylesheet" />
<div>
    @using (Html.BeginForm("Save", "MessageInfo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container">
            <div class="aaa">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">
                        Message Information
                    </legend>
                    <br />
                    @if (ViewBag.Title == "Edit")
                    {
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Serial Number:</label>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(x => x.MessageInfo.MessageInfoIdentity, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                        @Html.HiddenFor(x => x.MessageInfo.MessageInfoIdentity)
                                    </div>
                                </div>
                            </div>

                        </div>
                    }

                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Message Id:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.MessageInfo.MessageId, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Message Date:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.MessageInfo.MessageDate, "{0: dd MMMM yyyy}", new { @class = "datepicker textBoxsize form-control" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Message From:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.MessageInfo.MsgFrom, Model.ShipselectListItems, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Message To :</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.MessageInfo.MsgTo, Model.ShipselectListItems, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Subject :</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.MessageInfo.Subject, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Message:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.MessageInfo.Message, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Image Upload :</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.ImageUpload, new { type = "file" })
                                </div>

                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="form_group">
                <div style="float: right">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div>@Html.ActionLink("Back to List", "Index", "MessageInfo", new { @class = "btn btn-primary" })</div>
            <div class="row">
                <div class="col-sm-offset-4" id="newpost" style="color:red; padding-left:3px;">
                    <p>@TempData["message"]</p>
                </div>
            </div>
        </div>


    }
</div>
