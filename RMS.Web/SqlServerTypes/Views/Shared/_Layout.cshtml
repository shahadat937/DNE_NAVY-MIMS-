<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bangladesh Navy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="container" style="background-color: #FAFAD2">


    <div class="navbar navbar-inverse navbar-fixed-top success commonMarquee">
        <div class="">
            <div class="success">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <div class="row" style="background-color: #38C7F2">
                    <div class="col-sm-1" style="text-align: right">
                        <img src="~/images/BNSLogo.png" />
                    </div>
                    <div class="col-sm-5"> 
                        <p style="color:white;font-size:20px;margin-top: 24px; text-align:left">Bangladesh Navy Ship Machinery Information & Maintenance System </p>
                    </div>
                    <div class="col-sm-5">
                        <div class="navbar-collapse collapse">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                    <div class="col-sm-1">
                    </div>
                </div>
            </div>
            
            <div class="navbar-collapse collapse" style="background-color: #FFFFFF">
                @{Html.RenderAction("Menu", "Home");}
            </div>
        </div>
    </div>
    <div id="bo" class="container body-content" style="background-color:white;max-height: 1000px;max-width: 1400px;">
       
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @*@Scripts.Render("~/bundles/AppScripts")*@

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/APP/datepicker.js"></script>
    @RenderSection("scripts", required: false)
    <link href="~/CommonDesign/commonBootStrap.css" rel="stylesheet" />
</body>
</html>




