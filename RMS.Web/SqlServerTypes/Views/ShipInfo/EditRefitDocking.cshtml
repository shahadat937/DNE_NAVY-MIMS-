
@model RMS.Web.Models.ViewModel.ShipInfoViewModel
@{
    ViewBag.Title = (Model.ShipInfo.ShipInfoIdentity > 0) ? "Edit" : "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm("SaveRefitDocking", "ShipInfo", FormMethod.Post, new { @class = "UserForm" }))
    {
        <div class="container">
            <div class="aaa">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">
                        Ship General Information
                    </legend>
                    <br />
                    @if (ViewBag.Title == "Edit")
                    {
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Serial Number:</label>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(x => x.ShipInfo.ShipInfoIdentity, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                        @Html.HiddenFor(x => x.ShipInfo.ShipInfoIdentity)
                                    </div>
                                </div>
                            </div>

                        </div>
                    }

                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Ship Name:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.ShipInfo.ControlShipInfoId, Model.ShipSelectListItems, "-Select-", new { @class = "dropdownsize form-control", tabindex = 9 })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Refit Interval:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.RefitInterval, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Refit Interval Type:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.RefitIntervalType, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Refit Duration:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.RefitDuration, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Refit Duration Type:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.RefitDurationType, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Docking Duration:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.DockingDuration, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Docking Duration Type:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.DockingDurationType, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Last Refit Date:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.LastRefitDate, "{0:dd MMMM yyyy}", new { @class = "datepicker textBoxsize form-control", tabindex = 5})
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Last Docking Date:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.LastDockingDate, "{0:dd MMMM yyyy}", new { @class = "datepicker textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Next Refit Date:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.NextRefitDate, "{0:dd MMMM yyyy}", new { @class = "datepicker form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Next Docking Date:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.NextDockingDate, "{0:dd MMMM yyyy}", new { @class = "datepicker form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Remarks:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ShipInfo.Remarks, new { @class = "textBoxsize form-control", tabindex = 5, placeholder = "Enter Value" })
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </fieldset>
            </div>
            <div class="form_group">
                <div style="float: right">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div>@Html.ActionLink("Back to List", "RefitDockingIndex", "ShipInfo", new { @class = "btn btn-primary" })</div>
            <div class="row">
                <div class="col-sm-offset-4" id="newpost" style="color:red; padding-left:3px;">
                    <p>@TempData["message"]</p>
                </div>
            </div>
        </div>

    }
</div>
